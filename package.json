{
  "name": "simple-ldapjs",
  "version": "2.1.0",
  "description": "A simple way to find a user using ldapjs",
  "main": "lib/index.js",
  "scripts": {
    "lint": "run-p lint-*",
    "lint-src": "eslint src --fix",
    "precommit": "lint-staged",
    "babel": "babel src -d lib -s",
    "build": "rimraf lib && npm run babel",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SharonGrossman/simple-ldapjs.git"
  },
  "keywords": [
    "ldapjs"
  ],
  "author": "Sharon Grossman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SharonGrossman/simple-ldapjs/issues"
  },
  "homepage": "https://github.com/SharonGrossman/simple-ldapjs#readme",
  "engines": {
    "node": ">=4"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-istanbul": "^0.12.2",
    "babel-preset-env": "1.7.0",
    "babel-register": "^6.16.3",
    "chai": "^4.2.0",
    "coveralls": "^3.0.6",
    "eslint": "^6.4.0",
    "eslint-config-noamokman": "^9.0.0",
    "husky": "^3.0.5",
    "lint-staged": "9.3.0",
    "mocha": "^6.2.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0"
  },
  "dependencies": {
    "ldapjs": "^1.0.1",
